{
	"name": "kcd-discord-bot",
	"private": true,
	"sideEffects": false,
	"scripts": {
		"build": "run-s build:*",
		"build:css": "npm run generate:css -- --minify",
		"build:info": "node ./scripts/generate-build-info.js",
		"build:remix": "remix build",
		"dev": "run-p dev:*",
		"dev:css": "npm run generate:css -- --watch",
		"dev:remix": "cross-env NODE_ENV=development remix dev",
		"play:bot": "nodemon ./app/bot/playground.ts",
		"format": "prettier --write .",
		"generate:css": "tailwindcss -o ./app/styles/tailwind.css",
		"lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
		"setup": "prisma generate && prisma migrate deploy && prisma db seed",
		"start": "cross-env NODE_ENV=production remix-serve build",
		"start:mocks": "binode --require ./mocks -- @remix-run/serve:remix-serve build",
		"typecheck": "tsc -b",
		"validate": "run-p lint typecheck"
	},
	"prettier": {
		"arrowParens": "avoid",
		"bracketSameLine": false,
		"bracketSpacing": true,
		"embeddedLanguageFormatting": "auto",
		"endOfLine": "lf",
		"htmlWhitespaceSensitivity": "css",
		"insertPragma": false,
		"jsxSingleQuote": false,
		"printWidth": 80,
		"proseWrap": "always",
		"quoteProps": "as-needed",
		"requirePragma": false,
		"semi": false,
		"singleAttributePerLine": false,
		"singleQuote": true,
		"tabWidth": 2,
		"trailingComma": "all",
		"useTabs": true
	},
	"eslintIgnore": [
		"/node_modules",
		"/build",
		"/public/build"
	],
	"dependencies": {
		"@discordjs/builders": "^1.2.0",
		"@discordjs/rest": "^1.2.0",
		"@prisma/client": "^4.4.0",
		"@remix-run/node": "^1.7.2",
		"@remix-run/react": "^1.7.2",
		"@remix-run/serve": "^1.7.2",
		"@remix-run/server-runtime": "^1.7.2",
		"@sentry/node": "^7.14.0",
		"bcryptjs": "^2.4.3",
		"binode": "^1.0.5",
		"cross-env": "^7.0.3",
		"date-fns": "^2.29.3",
		"date-fns-tz": "^1.3.7",
		"discord-api-types": "^0.37.11",
		"discord.js": "^14.5.0",
		"dotenv": "^16.0.2",
		"got": "^12.5.1",
		"htmlparser2": "^8.0.1",
		"isbot": "^3.5.4",
		"leven": "^4.0.0",
		"match-sorter": "^6.3.1",
		"oauth-1.0a": "^2.2.6",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"set-interval-async": "^3.0.2",
		"tiny-invariant": "^1.3.1"
	},
	"devDependencies": {
		"@faker-js/faker": "^7.5.0",
		"@remix-run/dev": "^1.7.2",
		"@remix-run/eslint-config": "^1.7.2",
		"@testing-library/dom": "^8.18.1",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^13.4.0",
		"@testing-library/user-event": "^14.4.3",
		"@types/bcryptjs": "^2.4.2",
		"@types/eslint": "^8.4.6",
		"@types/node": "^18.7.23",
		"@types/react": "^18.0.21",
		"@types/react-dom": "^18.0.6",
		"@types/set-interval-async": "^1.0.0",
		"@vitejs/plugin-react": "^2.1.0",
		"autoprefixer": "^10.4.12",
		"c8": "^7.12.0",
		"chokidar": "^3.5.3",
		"esbuild": "^0.15.9",
		"eslint": "^8.24.0",
		"eslint-config-prettier": "^8.5.0",
		"fs-extra": "^10.1.0",
		"glob": "^8.0.3",
		"happy-dom": "^6.0.4",
		"msw": "^0.47.3",
		"nodemon": "^2.0.20",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.16",
		"prettier": "2.7.1",
		"prettier-plugin-tailwindcss": "^0.1.13",
		"prisma": "^4.4.0",
		"start-server-and-test": "^1.14.0",
		"tailwindcss": "^3.1.8",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.1.0",
		"typescript": "^4.8.4"
	},
	"engines": {
		"node": "16"
	},
	"prisma": {
		"seed": "node --require tsconfig-paths/register prisma/seed.js"
	}
}
